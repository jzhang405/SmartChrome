{
  "manifest_version": 3,
  "name": "ChromLLM - Smart Chrome Extension",
  "version": "1.0.0",
  "description": "Intelligent Chrome extension with LLM integration for content extraction and question answering",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "https://api.chromllm.example.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "ChromLLM"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}